{
  "name": "multi-env",
  "version": "0.0.2",
  "description": "Merges and loads environment variables from multiple .env files for nodejs projects.",
  "main": "lib/multienv.js",
  "repository": "https://github.com/jlegrone/multi-env",
  "author": "Jacob LeGrone <git@jacob.work>",
  "license": "MIT",
  "engines": {
    "node": ">= 8"
  },
  "scripts": {
    "build": "rimraf lib && babel src --out-dir lib",
    "watch": "yarn run build --watch",
    "test": "yarn test:unit && yarn test:e2e",
    "test:unit": "jest",
    "test:e2e": "yarn build && cd test-e2e && rimraf node_modules && npm install --no-package-lock && npm test",
    "lint": "eslint src",
    "prepublish": "yarn test && yarn run build",
    "commit": "git-cz",
    "commit:retry": "git-cz --retry",
    "commitmsg": "commitlint -e"
  },
  "jest": {
    "roots": [
      "src"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 33,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "dependencies": {
    "dotenv": "^8.0.0",
    "dotenv-expand": "5.1.0",
    "pkg-up": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/prompt": "^7.5.0",
    "@commitlint/travis-cli": "^7.5.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "commitizen": "^3.0.5",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^22.7.2",
    "greenkeeper-lockfile": "^1.15.1",
    "jest": "^24.0.0",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.13.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/@commitlint/prompt"
    }
  }
}
